@model IEnumerable<HastalikTakibi.DAL.Models.Database.PatientRecovery>

@{
    ViewData["Title"] = "PatientRecovery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .select-box {
        word-wrap: normal;
        background: darkgray;
        margin: 7px;
        height: 35px;
        color: black;
        font-size: 20px;
        font-weight: 400;
        font: icon;
        border-radius: 3px;
    }
</style>

<div class="container" style="min-width:100%;">
    <div class="header" style=" color: #ff9030; text-align: center; border: solid 2px black; margin-top: 2px; background-color: green; height: 45px;"> <h3>Hastalıl Durumu Bitmiş Hastalar</h3></div>
    <div class="select">
        <select name="forma" onchange="location = this.value;" class="select-box">
            <option value="">Seç</option>
            <option value="Index">Tüm Hastalar</option>
            <option value="PatientExisting">Mevcut Hastalar</option>
            <option value="PatientRecovery">Hastalık Durumu Bitmiş Hastalar</option>

        </select>
    </div>
    <div class="table-container" style="overflow-x:scroll;">
        <table class="table table table-striped" style="width: max-content;margin-top: 30px;">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TC)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Surname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EMail)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Province)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.District)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreateTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastUpdateTime)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TC)
                    </td>
                    <td>
                        <a href="/Patient/PatientInformation/@item.Id" data-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EMail)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Province)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.District)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastUpdateTime)
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
